<html>
	<head>
		<link href='css/bootstrap.css' type='text/css' rel='stylesheet'>
		<link href="css/admin.css" rel="stylesheet" type="text/css">
		<script src="js/admin.js" type='text/javascript'></script>

	</head>
	<body>
		<div class='container-fluid'>
		<!-- new row, for name of the Home Company -->
				<div class='row' id='navbar'>
					<h3 class='col-sm-2 col-md-2 col-xs-4 text-primary' id='company'>admin</h3>
				</div>

				<div id='switch' class='row'>

																									<!-- First Section -->
						<div class='text-center col-sm-2 col-xs-12' id='first_section'>
							<div class='row'>
								<div class='col-xs-12' style='margin-top:5%;'> <!-- Faculty List Section -->
									<div class='row'>
										<h4 class='col-xs-10 col-xs-offset-1' style='margin-bottom:5%;'>Faculty List</h4>
										<div class='col-xs-10 col-xs-offset-1' id='faculty_list_box'></div>
									</div>
									<div style='margin-top:4%' class='row'>
										<div class='col-xs-12'><div class='btn btn-success col-xs-12' onclick='view.showAddFacultyModal()'><img src='img/faculty-add.png' alt='add faculty'></div></div>
									</div>
								</div>
							</div>
						</div>

						<div class='col-sm-8 col-xs-12' id='report_section'></div>

																										<!-- Third Section -->

							<div class='col-sm-2 col-xs-12' id='third_section'>

								<div class='row'>
									<div class='col-xs-12 text-center' style='margin-top:5%;margin-bottom:10%'> <!-- batch List Section -->
										<div class='row'>
											<h4 class='col-xs-10 col-xs-offset-1' style='margin-bottom:5%;'>batches</h4>
											<div class='col-xs-10 col-xs-offset-1' id='batch_list_box'></div>
										</div>
										<div style='margin-top:4%' class='row'>
											<div class='col-xs-12'><div class='btn btn-success col-xs-12' onclick='view.showAddBatchModal()'><img src='img/add.png' alt='add faculty'></div></div>
										</div>
									</div>
									<div class='col-xs-12 text-center'> <!-- setting-->
										<div class='row'>
											<h3 class='col-xs-12 text-primary'><img src='img/settings.png'>settings</h3>
											<div class='col-xs-12'>
												<div class='row text-right;'>
													<div style='margin-top:2%' class='btn btn-danger disabled col-xs-10 col-xs-offset-1'>change password</div>
													<div style='margin-top:2%' class='btn btn-danger disabled col-xs-10 col-xs-offset-1'><img src='img/minus.png'> remove faculty</div>
													<div style='margin-top:2%' class='btn btn-danger disabled col-xs-10 col-xs-offset-1'><img src='img/minus.png'> remove batch</div>
													<div style='margin-top:2%' class='btn btn-primary disabled col-xs-10 col-xs-offset-1'>Log Out</div>
												</div>
											</div>
										</div>
									</div>
								</div>

							</div>
		</div>
	</body>
</html>
